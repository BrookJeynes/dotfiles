# Change window focus

# Change window focus within space
alt - e : yabai -m window --focus south
alt - i : yabai -m window --focus north
alt - n : yabai -m window --focus west
alt - o : yabai -m window --focus east

# Change focus between external displays
alt - a : yabai -m display --focus west
alt - t : yabai -m display --focus east


# Modify layout

# Rotate clockwise
shift + alt - r : yabai -m space --rotate 270
# Flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis
# Flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis
# Toggle window float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2


# Modify window size

# Toggle maximize window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
# Balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance


# Moving windows around

# Swap windows
shift + alt - e : yabai -m window --swap south
shift + alt - i : yabai -m window --swap north
shift + alt - n : yabai -m window --swap west
shift + alt - o : yabai -m window --swap east

# Move window and split
ctrl + alt - e : yabai -m window --warp south
ctrl + alt - i : yabai -m window --warp north
ctrl + alt - n : yabai -m window --warp west
ctrl + alt - o : yabai -m window --warp east

# Move window to display
shift + alt - a : yabai --display west; yabai -m display --focus west;
shift + alt - t : yabai --display east; yabai -m display --focus east;

# Move window to space x
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;


# Start/Stop yabai
ctrl + alt - q : yabai --start-service
ctrl + alt - s : yabai --stop-service
