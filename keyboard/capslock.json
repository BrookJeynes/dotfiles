  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/BrookJeynes/dotfiles/main/keyboard/capslock.json",
  "gallery_url": "",
  "repo": "https://github.com/BrookJeynes/dotfiles/blob/main/capslock.json",
  "rules": [

    {
      "description": "CapsLock to Hyper",
      "manipulators": [
        {
          "description": "capslock = esc(click) | hyper(hold)",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "escape = capslock switch",
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "caps_lock"
              ],
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
        
      ]
    },

    { 
      "description": "Hyper Navigation",
      "manipulators": [
        {
          "description": "j = h (vim left)",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "m"
            }
          ]
        },
        {
          "description": "k = j (vim down)",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "y"
            }
          ]
        },
        {
          "description": "l = k (vim up)",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "n"
            }
          ]
        },
        {
          "description": "semicolon = l (vim right)",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "u"
            }
          ]
        },
        {
          "description": "control + j = tree-sitter navigation left",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "m",
              "modifiers": [
                "left_control"
              ]
            }
          ]        
        },
        {
          "description": "control + semicolon = tree-sitter navigation right",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "left_control",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": [
                "left_control"
              ]
            }
          ]        
        },
        {
          "description": "shift + j = vim page navigation left",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "m",
              "modifiers": [
                "left_shift"
              ]
            }
          ]        
        },
        {
          "description": "shift + semicolon = vim page navigation right",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "left_shift",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": [
                "left_shift"
              ]
            }
          ]        
        }
      ]
    },

    {
      "description": "Hyper Code",
      "manipulators": [
       {
          "description": "command + j = #",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_command",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": [
                "left_shift"
              ]
            }
          ]        
        },
        {
          "description": "command + u = !",
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "left_command",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
           {
              "key_code": "1",
              "modifiers": [
                "left_shift"
              ]
            }
          ]        
        }
      ]
    }
  ]
}
